<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160dp"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10px"
        android:text="Equalizer Settings"
        android:textSize="16dp"
        android:textAlignment="center"
        />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="214.5dp"
        android:layout_height="253.0dp"
        android:layout_marginLeft="60px"
        android:rotation="270"
    >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
        >
            <TextView
                android:layout_width="22px"
                android:layout_height="wrap_content"
                android:layout_marginTop="2px"
                android:text="1"
                android:rotation="90" 
            />
            <SeekBar
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:progress="50"
                android:min="-1500"
                android:max="1500"
                android:id="@+id/seekBarEqBand1"
                android:tag="EqBand1"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
        >
            <TextView
                android:layout_width="22px"
                android:layout_height="wrap_content"
                android:layout_marginTop="2px"
                android:text="2"
                android:rotation="90"/>
            <SeekBar
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:progress="50"
                android:min="-1500"
                android:max="1500"
                android:id="@+id/seekBarEqBand2"
                android:tag="EqBand2"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">
            <TextView
                android:layout_width="22px"
                android:layout_height="wrap_content"
                android:layout_marginTop="2px"
                android:text="3"
                android:rotation="90"/>
            <SeekBar
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:progress="50"
                android:min="-1500"
                android:max="1500"
                android:id="@+id/seekBarEqBand3"
                android:tag="EqBand3"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">
            <TextView
                android:layout_width="22px"
                android:layout_height="wrap_content"
                android:layout_marginTop="2px"
                android:text="4"
                android:rotation="90"/>
            <SeekBar
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:progress="50"
                android:min="-1500"
                android:max="1500"
                android:id="@+id/seekBarEqBand4"
                android:tag="EqBand4"/>
            
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">
            <TextView
                android:layout_width="22px"
                android:layout_height="wrap_content"
                android:layout_marginTop="2px"
                android:text="5"
                android:rotation="90"/>
            <SeekBar
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:progress="50"
                android:min="-1500"
                android:max="1500"
                android:id="@+id/seekBarEqBand5"
                android:tag="EqBand5"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout >
