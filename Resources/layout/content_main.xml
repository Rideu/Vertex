
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:minWidth="25px"
    android:minHeight="25px"
    android:padding="20px"
    android:foregroundGravity="bottom">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView1"
        tools:src="@drawable/back"/>
    <TextView
        android:text="Vertex"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/textViewName" />
    <TextView
        android:layout_marginTop="60px"
        android:textSize="30px"
        android:text="The ultimate audio engine"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/textViewQuality" />

    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout1">

        <!--Load Manager-->
        <FrameLayout
            android:layout_marginTop="160px"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/frameLayoutLinkInput">
            <ProgressBar
                android:layout_width="match_parent"
                android:layout_height="25px"
                android:id="@+id/progressBar1"
                android:layout_gravity="bottom"
                android:progress="0"
                style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_marginTop="100px" />
            <EditText
                android:layout_width="400px"
                android:layout_height="wrap_content"
                android:id="@+id/editText1"
                android:inputType="text"
                android:hint="Paste video link here..." />
            <Button
                android:text="Start"
                android:layout_width="200px"
                android:layout_height="wrap_content"
                android:id="@+id/button1"
                android:layout_gravity="right"
                android:textSize="25px"/>
        </FrameLayout>

        <!--Meta Output-->
        <LinearLayout
            android:layout_marginTop="50px"
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/linearLayout2">
            <TextView
                android:text=""
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:layout_marginTop="5px" />
            <TextView
                android:text=""
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewTimeSpan"
                android:typeface="normal"
                android:textSize="30px"
                android:layout_marginTop="5px" />
            <TextView
                android:text=""
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:typeface="normal"
                android:textSize="30px" />
        </LinearLayout>


        <AbsoluteLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom">
            <!--Player-->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout3"
                android:layout_gravity="bottom|end"
                android:gravity="bottom|end">
                <Button
                    android:text="â–º"
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:textSize="40px"
                    android:id="@+id/buttonPlay"
                    android:layout_gravity="top|left"
                    android:padding="0px" />
                <SeekBar
                    android:layout_width="match_parent"
                    android:layout_height="50px"
                    android:id="@+id/seekBarAudioSeek"
                    android:layout_gravity="bottom" />

                <!--Timing-->
                <FrameLayout
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/frameLayout2">
                    <TextView
                        android:text="00:00:00"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textViewCurrentTime"
                        android:typeface="normal"
                        android:textSize="30px"
                        android:layout_gravity="left" />
                    <TextView
                        android:text="00:00:00"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textViewLength"
                        android:typeface="normal"
                        android:textSize="30px"
                        android:layout_gravity="right" />
                </FrameLayout>

            </LinearLayout>
        </AbsoluteLayout>

        <!--Tracks-->
        <RelativeLayout
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_marginTop="20px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollViewTracks"
            android:layout_gravity="bottom">

            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/listMenu1"
                android:layout_gravity="fill"
                android:minHeight="400px" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>